#!/bin/bash
# Edit this line to whatever Sink Index You prefer
# Default Sink Output
SINKOUTPUT=3

# While there is no sink-input is available continue 
while [ $SINKINPUT != "" ];
do
  # Capture Sink Inputs Index Number
  SINKINPUT=${pactl list sink-inputs | grep "Sink Input" | sed 's/.*#//'}
done

# Once a sink-input is available capture its index and move it to the default sink output
pactl move-sink-input ${SINKINPUT} ${SINKOUTPUT}

exit 0
